<Page x:Class="MealPlanner.MealPicking"
      xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
      xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
      xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006" 
      xmlns:d="http://schemas.microsoft.com/expression/blend/2008" 
      xmlns:local="clr-namespace:MealPlanner"
      mc:Ignorable="d" 
      d:DesignHeight="450" d:DesignWidth="800"
      Background="White"
      Title="MealPicking">

    <Grid Margin="20" >
        <!-- Define 6 rows and 3 columns -->
        <Grid.RowDefinitions>
            <RowDefinition Height="Auto"/>
            <!-- Row 0: Title -->
            <RowDefinition Height="Auto"/>
            <!-- Row 1: Day + Back button -->
            <RowDefinition Height="*"/>
            <!-- Row 2: Breakfast -->
            <RowDefinition Height="*"/>
            <!-- Row 3: Lunch -->
            <RowDefinition Height="*"/>
            <!-- Row 4: Dinner -->
            <RowDefinition Height="Auto"/>
            <!-- Row 5: Next button -->
        </Grid.RowDefinitions>
        <Grid.ColumnDefinitions>
            <ColumnDefinition Width="2*"/>
            <!-- Titles (Breakfast, Lunch, Dinner) -->
            <ColumnDefinition Width="3*"/>
            <!-- Meal selection ComboBoxes -->
            <ColumnDefinition Width="1*"/>
            <!-- People count ComboBoxes -->
        </Grid.ColumnDefinitions>

        <!-- Row 0: Title across all columns, centered -->
        <Label Grid.Row="0" Grid.Column="0" Grid.ColumnSpan="3"
               Content="What are we eating today?"
               FontSize="24"
               FontWeight="Bold"
               Foreground="#DC143C"
               HorizontalContentAlignment="Center"
               VerticalContentAlignment="Center"
               Margin="0,0,0,10" />

        <!-- Row 1: Day + Back button, centered across all columns -->
        <StackPanel Grid.Row="1" Grid.Column="0" Grid.ColumnSpan="3"
                    Orientation="Horizontal"
                    HorizontalAlignment="Center"
                    VerticalAlignment="Center"
                    Margin="0,0,0,20"
                    >
            <Button Content="←" Width="35" Height="30" Margin="0,0,10,0"
                    Click="BackButton_Click"/>
            <TextBlock x:Name="DayTextBlock"
                       FontStyle="Italic"
                       FontSize="22"
                       FontWeight="Bold"
                       VerticalAlignment="Center"
                       Text="Monday" />
        </StackPanel>

        <!-- Breakfast Row -->
        <Label Grid.Row="2" Grid.Column="0" Content="Breakfast"
               VerticalAlignment="Center"
               HorizontalAlignment="Left"
               FontSize="16" FontWeight="SemiBold" />
        <ComboBox x:Name="BreakfastComboBox"
                  Grid.Row="2" Grid.Column="1"
                  MinWidth="120"
                  Height="28"
                  FontSize="14"
                  Padding="4"
                  HorizontalAlignment="Stretch"
                  SelectionChanged="BreakfastComboBox_SelectionChanged"/>
        <ComboBox x:Name="BreakfastPeopleComboBox"
                  Grid.Row="2" Grid.Column="2"
                  MinWidth="60"
                  Height="28"
                  FontSize="14"
                  Padding="4"
                  HorizontalAlignment="Right"
                  SelectionChanged="BreakfastPeopleComboBox_SelectionChanged"/>

        <!-- Lunch Row -->
        <Label Grid.Row="3" Grid.Column="0" Content="Lunch"
               VerticalAlignment="Center"
               HorizontalAlignment="Left"
               FontSize="16" FontWeight="SemiBold" />
        <ComboBox x:Name="LunchComboBox"
                  Grid.Row="3" Grid.Column="1"
                  MinWidth="120"
                  Height="28"
                  FontSize="14"
                  Padding="4"
                  HorizontalAlignment="Stretch"
                  SelectionChanged="LunchComboBox_SelectionChanged"/>
        <ComboBox x:Name="LunchPeopleComboBox"
                  Grid.Row="3" Grid.Column="2"
                  MinWidth="60"
                  Height="28"
                  FontSize="14"
                  Padding="4"
                  HorizontalAlignment="Right"
                  SelectionChanged="LunchPeopleComboBox_SelectionChanged"/>

        <!-- Dinner Row -->
        <Label Grid.Row="4" Grid.Column="0" Content="Dinner"
               VerticalAlignment="Center"
               HorizontalAlignment="Left"
               FontSize="16" FontWeight="SemiBold" />
        <ComboBox x:Name="DinnerComboBox"
                  Grid.Row="4" Grid.Column="1"
                  MinWidth="120"
                  Height="28"
                  FontSize="14"
                  Padding="4"
                  HorizontalAlignment="Stretch"
                  SelectionChanged="DinnerComboBox_SelectionChanged"/>
        <ComboBox x:Name="DinnerPeopleComboBox"
                  Grid.Row="4" Grid.Column="2"
                  MinWidth="60"
                  Height="28"
                  FontSize="14"
                  Padding="4"
                  HorizontalAlignment="Right"
                  SelectionChanged="DinnerPeopleComboBox_SelectionChanged"/>

        <!-- Row 5: Next Button, right aligned -->
        <Button Grid.Row="5" Grid.Column="2"
                Content="Next"
                Width="100"
                Height="32"
                HorizontalAlignment="Right"
                Margin="0,15,0,0"
                Click="NextButton_Click"/>

    </Grid>
</Page>
